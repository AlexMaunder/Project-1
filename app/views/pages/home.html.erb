<% if @current_user.present? %>
  <h3>Current languages:</h3>
  <ul>
    <% @lang.each do |language| %>
    <li>
      <%= language.title %>
      <%= image_tag language.image, :class => 'thumb' if language.image.present? %>
      <div><%= link_to "delete", {:controller => "languages", :action => "destroy", :id => language.id }, data: {confirm: 'Are you sure?'}, :method => 'delete' %></div>
    <% end %>
    </li>
  </ul>

  <br>
  <br>
  <br>
  <br>
  <br>

  <ul style="list-style-type:none">

    <%= form_for @language do |f| %>
  <li><%= f.text_field :title, :required => true, :placeholder => "New Language" %></li>
  <li><%= f.url_field :image, :placeholder => "Image Link" %></li>
    <h5>
      <%= f.submit "Add Language" %>
      <% end %>
    </h5>
  </ul>
<% end %>
